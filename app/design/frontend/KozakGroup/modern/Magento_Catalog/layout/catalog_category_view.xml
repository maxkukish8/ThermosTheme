<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="div.sidebar.additional" remove="true"/>
        <referenceBlock name="category.product.addto" remove="true"/>

        <referenceContainer name="category.view.container">
            <container name="category.view.inner" htmlTag="div" htmlClass="category-view-inner" before="-" />
        </referenceContainer>

        <move element="category.description" destination="category.view.inner" before="-" />
        <move element="category.image" destination="category.view.inner" after="category.description" />
    </body>
</page>
